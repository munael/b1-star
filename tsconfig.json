{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "js",
        "sourceMap": true,
        "typeRoots": [
            "../types",
            "./node_modules/@types"
        ],
        "noImplicitThis": true,
        "strictNullChecks": true
    },
    "include": [
        "types/",
        "ts/"
    ],
    "exclude": [
        "ignored/",
        "**/*.no.ts",
        "archived/"
    ]
}